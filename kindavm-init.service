[Unit]
Description=KindaVM Initialization
After=sys-kernel-config.mount systemd-modules-load.service multi-user.target
Requires=sys-kernel-config.mount systemd-modules-load.service

[Service]
Type=oneshot
ExecStart=/usr/local/bin/kindavm-init-hid.sh
ExecStart=/usr/local/bin/kindavm-init-hdmi.sh
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target
